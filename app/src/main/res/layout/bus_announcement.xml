<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/bus_announcement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heading"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textSize="28dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/bus_announcement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_announcement_title"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Dec 9 at 15:34"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/bus_announcement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_announcement_date"
            android:layout_marginTop="1dp"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Yay!"
            android:textSize="16dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
