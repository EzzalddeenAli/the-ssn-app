<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postExamCellUserImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/postExamCellUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/postExamCellUserImage"
            android:text="Varun Ranganathan"
            android:textColor="#444"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postExamCellDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postExamCellUserImage"
            android:layout_marginTop="1dp"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="Yay!"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/postExamCellDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/postExamCellUserName"
            android:layout_below="@+id/postExamCellUserName"
            android:layout_marginRight="10dp"
            android:text="Dec 9 at 15:34"
            android:textSize="13sp" />

        <Button
            android:id="@+id/postExamCellPDFButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/postExamCellDescription"
            android:background="@android:color/transparent"
            android:text="PDF" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
