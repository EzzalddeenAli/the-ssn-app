<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/postExamCellTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/postExamCellDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postExamCellTitle"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="13sp"
            tools:text="Dec 9 at 15:34" />

        <TextView
            android:id="@+id/postExamCellDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postExamCellDate"
            android:layout_marginTop="1dp"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="2dp"
            android:textSize="16sp"
            tools:text="Yay!" />

        <Button
            android:id="@+id/postExamCellPDFButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/postExamCellDescription"
            android:background="@android:color/transparent"
            android:text="PDF"
            android:textColor="#0645AD" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
